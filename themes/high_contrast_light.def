/* @name: High Contrast Light */
/* Maximum contrast light theme - WCAG AAA */

/* Syntax highlighting */
X(SYNTAX_NORMAL,             0,   0,   0, "Normal text - pure black")
X(SYNTAX_COMMENT,          100, 100, 100, "Comments - dark gray")
X(SYNTAX_KEYWORD1,           0,   0,   0, "Keywords - black bold")
X(SYNTAX_KEYWORD2,          30,  30,  30, "Type keywords - dark gray")
X(SYNTAX_STRING,            50,  50,  50, "Strings - dark gray")
X(SYNTAX_NUMBER,            20,  20,  20, "Numbers - near black")
X(SYNTAX_MATCH,            200, 200,   0, "Search match - dark yellow")

/* UI elements */
X(UI_BACKGROUND,           255, 255, 255, "Background - pure white")
X(UI_FOREGROUND,             0,   0,   0, "Foreground - pure black")
X(UI_LINE_NUMBER,          130, 130, 130, "Line numbers")
X(UI_LINE_NUMBER_CURRENT,    0,   0,   0, "Current line number")
X(UI_LINE_NUMBER_DIRTY,    180, 120,   0, "Dirty line number")
X(UI_LINE_NUMBER_BG,       255, 255, 255, "Line number gutter")
X(UI_CURRENT_LINE,         230, 230, 230, "Current line highlight")
X(UI_SELECTION_BG,         160, 160, 160, "Selection background")
X(UI_SELECTION_FG,         255, 255, 255, "Selection text")
X(UI_STATUS_BG,              0,   0,   0, "Status bar background")
X(UI_STATUS_FG,            255, 255, 255, "Status bar text")
X(UI_MESSAGE_BG,            40,  40,  40, "Message bar background")
X(UI_MESSAGE_FG,           255, 255, 255, "Message bar text")
X(UI_CURSOR,                 0,   0,   0, "Cursor")
X(UI_TILDE,                180, 180, 180, "Empty line tilde")
X(UI_BRACKET_MATCH,          0,   0,   0, "Matched bracket")
X(UI_BRACKET_UNMATCH,        0,   0,   0, "Unmatched bracket")
