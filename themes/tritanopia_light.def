/* @name: Tritanopia Light */
/* Blue-blind friendly light theme */

/* Syntax highlighting */
X(SYNTAX_NORMAL,            30,  30,  30, "Normal text")
X(SYNTAX_COMMENT,          130, 140, 140, "Comments")
X(SYNTAX_KEYWORD1,           0,  90,  90, "Keywords - teal")
X(SYNTAX_KEYWORD2,          40, 100, 100, "Type keywords - teal")
X(SYNTAX_STRING,           140,  30,  30, "Strings - burgundy")
X(SYNTAX_NUMBER,           120,  20,  20, "Numbers - dark red")
X(SYNTAX_MATCH,            200,   0,   0, "Search match - bright red")

/* UI elements */
X(UI_BACKGROUND,           255, 255, 255, "Background")
X(UI_FOREGROUND,            30,  30,  30, "Foreground")
X(UI_LINE_NUMBER,          150, 160, 160, "Line numbers")
X(UI_LINE_NUMBER_CURRENT,    0,  90,  90, "Current line number")
X(UI_LINE_NUMBER_DIRTY,    140,  20,  20, "Dirty line number")
X(UI_LINE_NUMBER_BG,       245, 250, 250, "Line number gutter")
X(UI_CURRENT_LINE,         240, 248, 248, "Current line highlight")
X(UI_SELECTION_BG,         180, 220, 220, "Selection background")
X(UI_SELECTION_FG,           0,  40,  40, "Selection text")
X(UI_STATUS_BG,              0,  90,  90, "Status bar background")
X(UI_STATUS_FG,            255, 255, 255, "Status bar text")
X(UI_MESSAGE_BG,           140,  30,  30, "Message bar background")
X(UI_MESSAGE_FG,           255, 255, 255, "Message bar text")
X(UI_CURSOR,                 0,  90,  90, "Cursor")
X(UI_TILDE,                210, 220, 220, "Empty line tilde")
X(UI_BRACKET_MATCH,        140,  30,  30, "Matched bracket")
X(UI_BRACKET_UNMATCH,      200,  20,  20, "Unmatched bracket")
