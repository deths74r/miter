/* @name: Retro Blue */
/* Classic blue screen terminal style */

/* Syntax highlighting */
X(SYNTAX_NORMAL,           255, 255, 255, "Normal text - white")
X(SYNTAX_COMMENT,          170, 170, 255, "Comments - light blue")
X(SYNTAX_KEYWORD1,         255, 255,   0, "Keywords - yellow")
X(SYNTAX_KEYWORD2,           0, 255, 255, "Type keywords - cyan")
X(SYNTAX_STRING,           255, 170, 170, "Strings - pink")
X(SYNTAX_NUMBER,           170, 255, 170, "Numbers - light green")
X(SYNTAX_MATCH,            255,   0,   0, "Search match - red")

